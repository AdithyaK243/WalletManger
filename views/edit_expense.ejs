<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">Edit Expenses</h1>
        <form method="POST" action="/expense/edit/<%= expense.id %>">
          <div class="form-group">
            <label for="title">Title</label>
            <input
              type="text"
              id="title"
              name="title"
              class="form-control"
              value="<%= expense.title %>"
            />
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <input
              type="text"
              id="description"
              name="description"
              class="form-control"
              value="<%= expense.description %>"
            />
          </div>
          <div class="form-group">
            <label for="description">Amount</label>
            <input
              type="number"
              id="amount"
              name="amount"
              class="form-control"
              value="<%= expense.amount %>"
            />
            <br>
          <button type="submit" class="btn btn-primary btn-block">Done</button>
        </form>
      </div>
    </div>
  </div>